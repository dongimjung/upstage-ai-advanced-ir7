{
    "manifest_version": 3,
    "name": "RAG Search-ELITE",
    "version": "1.0",
    "description": "Highlight text and search using RAG system",
    "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
    "host_permissions": ["http://10.196.197.34:5000/"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
        {
          "resources": ["images/icon.icon"],
          "matches": ["<all_urls>"]
        }
      ]
  }
  